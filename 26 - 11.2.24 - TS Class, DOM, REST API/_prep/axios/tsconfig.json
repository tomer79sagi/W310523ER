{
    
  "compilerOptions": {
  
  "target": "es2016",
  "module": "es6",
  
  "lib": ["dom", "dom.iterable", "esnext"],
  
  "allowJs": true,
  
  "skipLibCheck": true,
  
  "esModuleInterop": true,
  
  "allowSyntheticDefaultImports": true,
  
  "strict": true,
  
  "forceConsistentCasingInFileNames": true,
  
  "noEmit": true,
  
  // "resolveJsonModule": true,
  
  "isolatedModules": true,
  
  "jsx": "react-jsx",
  "moduleResolution": "node"
  
  },
  
  "include": ["src"]
  
  }